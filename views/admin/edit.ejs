<div class="create-div">
  <h1>Edit Blog</h1>
  <form action="/edit/<%= data._id %>?_method=PUT" method="POST">
    <div>
      <label for="title" value>Blog Title</label>
      <input
        type="text"
        name="title"
        id="title"
        value="<%= data.title %>"
        required
      />
    </div>
    <div>
      <label for="body">Blog Body</label>
      <textarea name="body" id="body" cols="30" rows="10" required>
<%= data.body %></textarea
      >
    </div>

    <button type="submit">Save</button>
  </form>
</div>
