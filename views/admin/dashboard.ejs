<div class="dashboard-div">
  <h1>Dashboard</h1>
  <a class="add-blog" href="/create">+ Add New Blog</a>
  <div class="dashboard-blogs">
    <h2>Blogs</h2>
    <div class="dashboard-blogs-list">
      <ul>
        <% data.forEach(post => { %>
        <li>
          <a
            class="dashboard-blogs-links post-links"
            href="/post/<%= post._id %>"
          >
            <span><%= post.title %></span>
            <span><%= post.createdAt.toDateString()%></span>
          </a>
          <form action="/delete/<%= post._id %>?_method=DELETE" method="POST">
            <input class="delete-btn" type="submit" value="Delete" />
          </form>
          <a class="edit-btn" href="/edit/<%= post._id %>">Edit</a>
        </li>
        <% }) %>
      </ul>
    </div>
  </div>
</div>
